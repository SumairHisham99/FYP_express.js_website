nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand(href='/home')
    h4 EVENTO
  button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse')
    span.navbar-toggler-icon
  // Collection of nav links, forms, and other content for toggling
  #navbarCollapse.collapse.navbar-collapse.justify-content-start
    .navbar-nav
      a.nav-item.nav-link(href='/home') Home
      a.nav-item.nav-link(href='#') About
      a.nav-item.nav-link(href='#') Contact
    form.navbar-form.form-inline
      .input-group.search-box
        input#search.form-control(type='text', placeholder='Search here...')
        .input-group-append
          span.input-group-text
            i.material-icons &#xE8B6;
    .navbar-nav.action-buttons.ml-auto
    a.btn.btn-success(href='/postadd', type='button', style="margin-right: 5px") POST ADD 
    a.btn.btn-primary(href='/logout', type='button') LOGOUT
      
